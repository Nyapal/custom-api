<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
    <form action="/plants/{{plant._id}}?_method=PUT" method="post">
      <legend>Edit</legend>
      <div class="form-group">
        <label for="post-title">Title</label>
        <input type="text" name="title" class="form-control" id="post-title" value="{{plant.title}}">
      </div>
      <div class="form-group">
        <label for="post-summary">Summary</label>
        <textarea name="summary" class="form-control" id="post-summary" value="{{plant.summary}}"></textarea>
      </div>
      <div class='text-right'>
        <button type="submit" class="btn btn-primary">Edit Plant</button>
      </div>
    </form>
  </div>
</div>